import { createBrowserClient } from "@supabase/ssr";
import type { SupabaseClient } from "@supabase/supabase-js";

let _client: SupabaseClient | null = null;

/** Jediný (singleton) Supabase klient pro prohlížeč */
export default function getSupabase(): SupabaseClient {
  if (_client) return _client;

  const url = process.env.NEXT_PUBLIC_SUPABASE_URL;
  const anon = process.env.NEXT_PUBLIC_SUPABASE_ANON_KEY;

  if (!url || !anon) {
    // Uvidíš varování v konzoli, ať je hned jasné proč je supabase undefined
    console.warn("Chybí env proměnné NEXT_PUBLIC_SUPABASE_URL / NEXT_PUBLIC_SUPABASE_ANON_KEY");
    throw new Error("Chybí Supabase veřejné env proměnné");
  }

  _client = createBrowserClient(url, anon);
  return _client;
}

// Pro kompatibilitu se staršími importy:
export const createClient = getSupabase;
export const createBrowserClientCompat = getSupabase;
